{
  "model": "tacotron2",
  "run_name": "henry_voice_full_training",
  "run_description": "High-quality training with all 80 samples",
  "datasets": [
    {
      "name": "henry_full_dataset",
      "path": "/ssd/tts_project/voice_data/",
      "meta_file_train": "metadata_train.csv",
      "meta_file_val": "metadata_val.csv",
      "language": "en",
      "phoneme_cache_path": "/ssd/tts_project/phoneme_cache"
    }
  ],
  "audio": {
    "sample_rate": 22050,
    "hop_length": 256,
    "win_length": 1024,
    "n_fft": 1024,
    "n_mels": 80,
    "fmin": 0,
    "fmax": 8000,
    "ref_level_db": 20,
    "power": 1.5,
    "preemphasis": 0.97,
    "griffin_lim_iters": 60,
    "do_trim_silence": true,
    "trim_db": 45,
    "do_sound_norm": true,
    "do_amp_to_db_linear": true,
    "stats_path": null
  },
  "batch_size": 24,
  "eval_batch_size": 16,
  "num_loader_workers": 4,
  "num_eval_loader_workers": 2,
  "run_eval": true,
  "test_delay_epochs": 10,
  "epochs": 1000,
  "lr": 0.001,
  "lr_decay": true,
  "lr_scheduler": "ExponentialLR",
  "lr_scheduler_params": {
    "gamma": 0.95
  },
  "wd": 1e-06,
  "grad_clip": 1.0,
  "model_args": {
    "r": 1,
    "memory_size": 5,
    "prenet_type": "original",
    "prenet_dropout": true,
    "prenet_dropout_at_inference": false,
    "forward_attn": true,
    "trans_agent": true,
    "forward_attn_mask": true,
    "location_attn": false,
    "attn_norm": "sigmoid",
    "double_decoder_consistency": true,
    "ddc_r": 6,
    "speakers_file": null,
    "use_speaker_embedding": false,
    "use_gst": true,
    "gst_style_input": null,
    "separate_stopnet": true,
    "stopnet_pos_weight": 15.0
  },
  "print_step": 25,
  "plot_step": 100,
  "log_model_step": 500,
  "save_step": 1000,
  "save_n_checkpoints": 10,
  "save_checkpoints": true,
  "output_path": "/ssd/tts_project/full_training_output/",
  "use_phonemes": true,
  "phoneme_language": "en-us",
  "phoneme_backend": "espeak",
  "compute_input_seq_cache": true,
  "text_cleaner": "english_cleaners",
  "enable_eos_bos_chars": true,
  "test_sentences_file": "",
  "phoneme_cache_path": "/ssd/tts_project/phoneme_cache",
  "loss_masking": true,
  "decoder_loss_alpha": 0.25,
  "postnet_loss_alpha": 0.25,
  "postnet_diff_spec_alpha": 0.25,
  "decoder_diff_spec_alpha": 0.25,
  "decoder_ssim_alpha": 0.25,
  "postnet_ssim_alpha": 0.25,
  "stopnet_loss_alpha": 1.0,
  "mixed_precision": false,
  "distributed": false,
  "cudnn_enabled": true,
  "cudnn_benchmark": false
}