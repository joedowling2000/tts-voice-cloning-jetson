{
  "model": "tacotron2",
  "run_name": "custom_voice_v2_stable",
  "run_description": "Improved stable training with fixed attention, stopnet, and error handling - Version 2.0",
  
  "datasets": [
    {
      "name": "voice_dataset",
      "path": "/ssd/tts_project/voice_data/processed_audio/",
      "meta_file_train": "metadata_ljspeech.csv",
      "formatter": "ljspeech",
      "language": "en"
    }
  ],
  
  "audio": {
    "sample_rate": 22050,
    "hop_length": 256,
    "win_length": 1024,
    "n_fft": 1024,
    "n_mels": 80,
    "fmin": 0,
    "fmax": 8000,
    "ref_level_db": 20,
    "power": 1.5,
    "preemphasis": 0.97,
    "griffin_lim_iters": 60,
    "do_trim_silence": true,
    "trim_db": 45,
    "do_sound_norm": true,
    "signal_norm": true,
    "symmetric_norm": true,
    "max_norm": 4.0,
    "clip_norm": true,
    "mel_fmin": 0.0,
    "mel_fmax": 8000.0,
    "spec_gain": 1.0,
    "do_amp_to_db_linear": true,
    "do_amp_to_db_mel": true
  },
  
  "batch_size": 2,
  "eval_batch_size": 1,
  "num_loader_workers": 2,
  "num_eval_loader_workers": 1,
  "run_eval": true,
  "test_delay_epochs": 25,
  "eval_split_size": 0.1,
  
  "epochs": 1000,
  "lr": 0.0002,
  "lr_decay": true,
  "lr_scheduler": "ExponentialLR",
  "lr_scheduler_params": {
    "gamma": 0.9999
  },
  "wd": 0.000001,
  "grad_clip": 0.5,
  "grad_accum_steps": 2,
  
  "hidden_size": 512,
  "encoder_type": "tacotron2",
  "decoder_type": "tacotron2",
  "attention_type": "original",
  "attention_win": true,
  "windowing": true,
  "use_forward_attn": true,
  "forward_attn_mask": true,
  "transition_agent": false,
  "location_attn": true,
  "attn_norm": "sigmoid",
  "prenet_type": "original",
  "prenet_dropout": true,
  "prenet_dropout_at_inference": false,
  "separate_stopnet": true,
  "stopnet_pos_weight": 50.0,
  "max_decoder_steps": 2000,
  
  "loss_masking": true,
  "decoder_loss_alpha": 0.5,
  "postnet_loss_alpha": 0.5,
  "postnet_diff_spec_alpha": 0.25,
  "decoder_diff_spec_alpha": 0.25,
  "decoder_ssim_alpha": 0.0,
  "postnet_ssim_alpha": 0.0,
  "ga_alpha": 5.0,
  
  "output_path": "/ssd/tts_project/training_runs/v2_stable/",
  "print_step": 10,
  "plot_step": 50,
  "log_model_step": 500,
  "save_step": 500,
  "save_n_checkpoints": 20,
  "save_checkpoints": true,
  "save_best_after": 1000,
  "target_loss": "loss",
  "print_eval": false,
  
  "use_phonemes": false,
  "text_cleaner": "english_cleaners",
  "enable_eos_bos_chars": false,
  "test_sentences": [
    "Hello World.",
    "This is Henry speaking clearly.",
    "The quality should be much better now.",
    "Training with improved stability and attention."
  ],
  
  "mixed_precision": false,
  "distributed": false,
  "num_gpus": 0,
  "use_cuda": false,
  
  "dashboard_logger": "tensorboard",
  "tb_model_param_stats": false
}