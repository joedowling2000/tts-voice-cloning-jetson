{
  "model": "tacotron2",
  "run_name": "henry_voice_arm_max_quality",
  "run_description": "Maximum quality ARM training with all 80 samples using TTS v0.13.3",
  
  "datasets": [
    {
      "name": "henry_dataset",
      "path": "/ssd/tts_project/voice_data/processed_audio/",
      "meta_file_train": "metadata_ljspeech.csv",
      "formatter": "ljspeech",
      "language": "en"
    }
  ],
  
  "audio": {
    "sample_rate": 22050,
    "hop_length": 256,
    "win_length": 1024,
    "n_fft": 1024,
    "n_mels": 80,
    "fmin": 0,
    "fmax": 8000,
    "ref_level_db": 20,
    "power": 1.5,
    "preemphasis": 0.97,
    "griffin_lim_iters": 60,
    "do_trim_silence": true,
    "trim_db": 45,
    "do_sound_norm": true,
    "signal_norm": true,
    "symmetric_norm": true,
    "max_norm": 4.0,
    "clip_norm": true,
    "mel_fmin": 0.0,
    "mel_fmax": 8000.0,
    "spec_gain": 1.0,
    "do_amp_to_db_linear": true,
    "do_amp_to_db_mel": true
  },
  
  "batch_size": 4,
  "eval_batch_size": 2,
  "num_loader_workers": 2,
  "num_eval_loader_workers": 1,
  "run_eval": true,
  "test_delay_epochs": 50,
  "eval_split_size": 0.05,
  
  "epochs": 500,
  "lr": 0.0005,
  "lr_decay": true,
  "lr_scheduler": "MultiStepLR",
  "lr_scheduler_params": {
    "milestones": [500, 750, 900],
    "gamma": 0.5
  },
  "wd": 0.000001,
  "grad_clip": 1.0,
  "grad_accum_steps": 1,
  
  "hidden_size": 512,
  "encoder_type": "tacotron2",
  "decoder_type": "tacotron2",
  "attention_type": "original",
  "attention_win": true,
  "windowing": true,
  "use_forward_attn": true,
  "forward_attn_mask": true,
  "location_attn": true,
  "attn_norm": "sigmoid",
  "prenet_type": "original",
  "prenet_dropout": true,
  "separate_stopnet": true,
  "stopnet_pos_weight": 15.0,
  "loss_masking": true,
  "decoder_loss_alpha": 0.5,
  "postnet_loss_alpha": 0.5,
  "postnet_diff_spec_alpha": 0.5,
  "decoder_diff_spec_alpha": 0.5,
  "decoder_ssim_alpha": 0.0,
  "postnet_ssim_alpha": 0.0,
  
  "output_path": "/ssd/tts_project/arm_max_quality_output/",
  "print_step": 25,
  "plot_step": 100,
  "log_model_step": 1000,
  "save_step": 1000,
  "save_n_checkpoints": 10,
  "save_checkpoints": true,
  "save_best_after": 50000,
  
  "use_phonemes": false,
  "text_cleaner": "english_cleaners",
  "enable_eos_bos_chars": false,
  "test_sentences": [
    "Hello, this is Henry speaking with the new high-quality voice model.",
    "The quality of this synthetic speech should be significantly improved over previous attempts.",
    "Science and mathematics are fascinating subjects that help us understand how the world works around us.",
    "Thank you for listening to my voice recordings and helping me contribute to this interesting project."
  ],
  
  "mixed_precision": false,
  "distributed": false,
  "num_gpus": 0,
  "use_cuda": false
}